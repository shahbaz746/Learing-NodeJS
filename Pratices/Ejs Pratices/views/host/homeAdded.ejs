<%- include('../partials/header') %>

  <style>
    /* General layout */
    body {
      margin: 0;
      padding: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: linear-gradient(to bottom right, #fde2e4, #ffffff, #dbeafe);
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      position: relative;
    }

    /* Card container */
    .success-card {
      background-color: rgba(255, 255, 255, 0.7);
      backdrop-filter: blur(8px);
      border-radius: 20px;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
      padding: 50px 40px;
      text-align: center;
      max-width: 450px;
      width: 90%;
    }

    /* Icon */
    .icon-container {
      display: flex;
      justify-content: center;
      margin-bottom: 25px;
    }

    .icon {
      width: 70px;
      height: 70px;
      background-color: #dcfce7; /* green-100 */
      border-radius: 50%;
      padding: 14px;
    }

    /* Headline */
    h1 {
      font-size: 2rem;
      font-weight: 700;
      color: #1f2937;
      margin-bottom: 10px;
    }

    /* Paragraph */
    p {
      color: #4b5563;
      font-size: 1rem;
      margin-bottom: 30px;
      line-height: 1.5;
    }

    /* Button */
    a {
      display: inline-block;
      background-color: #ec4899;
      color: white;
      padding: 12px 30px;
      border-radius: 9999px;
      font-weight: 500;
      text-decoration: none;
      box-shadow: 0 3px 8px rgba(0, 0, 0, 0.1);
      transition: all 0.2s ease;
    }

    a:hover {
      background-color: #db2777;
      box-shadow: 0 5px 10px rgba(0, 0, 0, 0.15);
    }

    /* Footer */
    footer {
      position: absolute;
      bottom: 15px;
      color: #6b7280;
      font-size: 0.9rem;
      text-align: center;
    }
  </style>
</head>
<body>

  <!-- Success Card -->
  <div class="success-card">
    <div class="icon-container">
      <svg xmlns="http://www.w3.org/2000/svg" 
           fill="none" viewBox="0 0 24 24" 
           stroke-width="2" stroke="green" 
           class="icon">
        <path stroke-linecap="round" stroke-linejoin="round" 
              d="M4.5 12.75l6 6 9-13.5" />
      </svg>
    </div>

    <h1>Home Added Successfully!</h1>
    <p>Your listing has been saved successfully. You can go back to the homepage to view it.</p>

    <a href="/">⬅ Go to Home</a>
  </div>

  <!-- Footer -->
  <footer>
    © 2025 Airbnb Clone Project
  </footer>

</body>
</html>
